<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#d9edd5"
    tools:context="com.example.raviraj.myapplication.MainActivity">
<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1"
    android:tooltipText="#6388bc">
    <EditText
        android:focusableInTouchMode="true"

        android:id="@+id/fristNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#f5000000"
        android:inputType="number"
        android:hint="FristNumber"/>

</android.support.design.widget.TextInputLayout>


<android.support.v4.widget.Space
    android:layout_width="match_parent"
    android:layout_height="10dp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">
        <EditText

            android:id="@+id/secondNumberText"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:inputType="number"
            android:textColorHint="#f5000000"
            android:layout_height="wrap_content"
            android:hint="Enter second Number"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">
    <EditText
        android:id="@+id/answerText"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="Answer"


        tools:ignore="Deprecated" />

</android.support.design.widget.TextInputLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="50sp"
        android:layout_height="wrap_content"
        android:text="+"/>
    <Button
        android:id="@+id/subButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="-"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mulButton"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="X"/>
        <Button
            android:id="@+id/divButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="/"/>
    </LinearLayout>

</LinearLayout>
